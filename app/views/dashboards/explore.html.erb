<style>
    body{
      /* background-image: url(<%= asset_path 'add_bg.png' %>);
      background-repeat: no-repeat;
      background-size: 100vw 100vh;  */
      scroll-behavior: smooth;
      Overflow-y:scroll;
      Overflow-x:scroll;
    }
    #content{
        display: flex;
        flex-direction: row;
    }
    .container{
      position: relative;
      width: 25%;
      display: flex;
      flex-direction: row;
      margin-top: 3.5%;
      margin-left: 8%;
    }
    
    .image_topic{
      opacity: 1;
      display: block;
      width: 100vw;
      height: auto;
      transition: .5s ease;
      backface-visibility: hidden;
      border-color: lightgray;
      border-style: groove;
    }
    .middle{
      width: 100%;
      background-color: #FF9736;
      transition: .5s ease;
      opacity: 0;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      -ms-transform: translate(-50%, -50%);
    text-align: center;
    }
    .container:hover .middle {
      opacity: 1;
    }
    .container:hover .image_topic {
      -webkit-filter: blur(1px); 
      filter: blur(1px); 
      border-color: lightgray;
      border-style: groove;
    }
    .name_topic{
      color: white;
      font-size: 25px;
      padding: 16px 32px;
    }
    #add_btn{
      font-family: Poppins;
      width: 10vw;
      background-color: #21BE02;
      font-size: 1.15vw;
      margin-left: 80vw;
      margin-top: 1vw;
      border-style: none;
    }
</style>
