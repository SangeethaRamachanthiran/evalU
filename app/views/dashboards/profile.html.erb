            <span class="field_cls"> Email id : <%= @current_user.email_id %></span>
            <span class="field_cls"> Date of Birth : <%= @current_user.dob %></span>
        </div>
    </div>
    
</div>

<script>
    function myFunction() {
        let x = document.getElementById("myDropdown");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
    }
</script>