<div id="big_container">
    <div style=" display: flex; flex-direction: row;">
      <div style="margin-top: -6vw; position: fixed;">
        <%= image_tag 'EVALU.png' , id: "logo_evalu" %>
      </div>
      <div>
          <ul>
            <li>
              <a href="/home">
                Home
              </a>
            </li>
            <li>
                <a href="/quiz">
                  Create
                </a>
            </li>
            <li>
                <a href="/explore">
                  Dashboard
                </a>
            </li>
            <li class="dropdown">
              <%= image_tag "loggedinuser.png" , height: 50, class: 'dropbtn' %>
  
                    <div id="myDropdown" class="dropdown-content">
                      <a href="#"><%= @current_user.email_id %></a>
                      <a href="/profile" style="color: red; font-size: 25px;"> Profile </a>
                      <a href="/logout" style="color: red; font-size: 25px;"> Logout </a>
                    </div>
                  </div>
                </div>
            </li>
          </ul>
      </div>
    </div>
    <div style="display: flex; flex-direction: row;">
        <div class="sidenav">
            <div style="display: flex; flex-direction: row;">
                <%= image_tag 'explore_image.png' , width: "50vw" , height: "50vw" , class: "image_class" %>
                    <a href="/explore">Explore</a>
            </div>
            <div style="display: flex; flex-direction: row;">
                <%= image_tag 'profileicon.png' , width: "50vw" , height: "50vw" , class: "image_class" %>
                    <a href="/profile" style="font-weight: 900;">Profile</a>
            </div>
            <div style="display: flex; flex-direction: row; margin-top: 1vw;">
                <%= image_tag 'mylibrary.png' , width: "50vw" , height: "50vw" , class: "image_class" %>
                    <a href="/mylibrary">My Library</a>
            </div>
            <div style="display: flex; flex-direction: row;">
                <%= image_tag 'report.png' , width: "50vw" , height: "50vw" , class: "image_class" %>
                    <a href="/reports">Report</a>
            </div>
        </div>
        <div>
            <%= image_tag 'triangle.png' , id: "tri_id" %>
        </div>
        <div style="display: flex; flex-direction: row;">
          <div id="details" style="display: flex; flex-direction: column;">
            <div style="display: flex; flex-direction: row;">
              <h2 class="label_cls">Username :</h2> <span class="field_cls"> <%= @current_user.username %></span>
            </div>
            <div style="display: flex; flex-direction: row;">
              <h2 class="label_cls"> Email id : </h2> <span class="field_cls"> <%= @current_user.email_id %></span>
            </div>
            <div style="display: flex; flex-direction: row;">
              <h2 class="label_cls"> Date of Birth : </h2> <span class="field_cls"> <%= @current_user.dob %></span>
            </div>
            <button style=" margin-left: 20vw; margin-top: 2vw; background-color: #24B7C6; border-color: #24B7C6; font-size: 1.5vw; font-family: Poppins; padding-bottom: 8px; color: white; width: 5vw; height: 2vw;">
            Edit</button>
          </div>
          <div style="display: flex; flex-direction: column;">
            <h1 style="margin-top: 6vw; margin-left: -15vw; font-size: 4vw; font-family: Poppins; color: #F96972;">My Profile</h1>
            <div id="profile_image">
              <%= image_tag 'loggedinuser.png', width: '100%', height: '100%'%>
            </div>
          </div>
        </div>
    </div>
    
</div>

<script>
    function myFunction() {
        let x = document.getElementById("myDropdown");
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
    }
</script>