    body{
        /* background-image: url("bg_login"); */
        background-image: url(<%= asset_path 'bg_login.png' %>);
        background-repeat: no-repeat;
        background-size: 100% 916px;
    }
    .flash-msg{
        color: red;
        margin-left: 20%;
        padding-top: 5%;
