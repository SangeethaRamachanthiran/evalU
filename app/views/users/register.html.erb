<style>
    body{
        background-image: url(<%= asset_path 'register.png' %>);
        background-repeat: no-repeat;
        background-size: 1930px 1000px;
        display: flex;
        flex-direction: row;
    }
    .flash-msg{
        color: red;
        margin-left: 20%;
        padding-top: 5%;
    }
</style>
<h2 style="margin-left: 120px; font-size: 8rem; margin-top: 10px; font-family: 'Poppins'; color: white;">Register</h2>
<%# <h1 style="font-size:5vw;">Register</h1> %>
<div id="div_style">

    <% flash.each do |type, msg| %>
        <div class = "flash-msg">
            <%= msg %>
        </div> 
    <% end %>
        <%= form_with(model: @user,  url: "/create", method: "POST") do |form| %>
        <%= form.text_field :username , :required => true,  id: "myInput", class: "text_box", placeholder: "Enter your username", style: "margin-left: 40px;  margin-top: 40px;" %><br>
        <%= form.text_field :email_id , :required => true, :pattern => '[^@]+@[^@]+\.[a-z]{2,6}', id: "myInput" ,class: "text_box", placeholder: "Enter your Email id", style: "margin-left: 40px;  margin-top: 40px;" %><br>
        <%= form.password_field :password , :required => true, id: "myInput" ,class: "text_box", minlength: "8", maxlength: "12", placeholder: "Enter your Password", style: "margin-left: 40px;  margin-top: 40px;" %><br>
        <%= form.text_field :dob , id: "myDueDate", :required => true, class: "text_box", placeholder: "Enter your Date of Birth", onfocus: "(this.type='date')", style: "margin-left: 40px;  margin-top: 40px;" %><br>
        <p style="margin-left: 12%;">Already have an account <a href="/login"> Log in</a></p><br>
        <%= form.submit "Submit" , style: "margin-left: 34%; width: 30%; height: 44px; border-radius: 10px; background-color: #61D04B; border-color: #61D04B; color: white; font-family: 'Poppins'; font-weight: bold; font-size: 25px; " %>
        <% end %>
</div>
        