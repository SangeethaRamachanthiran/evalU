<div id="div_style">
<h2 style="margin-left: 25%; font-size: 30px;">Register</h2>
    <% flash.each do |type, msg| %>
        <div class = "flash-msg">
            <%= msg %>
        </div> 
    <% end %>
        <%= form_with(model: @user,  url: "/register", method: "POST") do |form| %>
        <label for="user_name">Username :</label>
        <%= form.text_field :username, :required => true,  id: "myInput", class: "text_box", style: "margin-left: 9%;" %><br>
        <label for="email">Email id :</label>
        <%= form.text_field :email_id, :required => true, :pattern => '[^@]+@[^@]+\.[a-z]{2,6}', id: "myInput" ,class: "text_box", style: "margin-left: 12%;"%><br>
        <label for="password">Password :</label>
        <%= form.password_field :password, :required => true, id: "myInput" ,class: "text_box", minlength: "8", maxlength: "12", style: "margin-left: 10%;" %><br>
        <label for="dob">Date of Birth :</label>
        <%= form.date_field :dob, id: "myDueDate", :required => true, class: "text_box", style: "margin-left: 3%; width: 48%;" %><br>
        <p style="margin-left: 16%;">Already have an account <a href="/login"> Log in</a></p><br>
        <%= form.submit "Submit" , class: "text_box", style: "margin-left: 30%; width: 20%;" %>
        <% end %>
